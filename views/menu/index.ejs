<body>
    <header>
        <div class="logo">
            <img src="/img/logo.png" alt="">
        </div>
        <div class="form">
            <form>
                <input type="text" id="phone" name="phone" placeholder="search here...">
            </form>
        </div>
        <div class="icons">
            <span><i class="fa fa-list" aria-hidden="true"></i></span>
        </div>
        
