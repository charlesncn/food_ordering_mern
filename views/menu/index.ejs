                <div class="menuItems">
                    <ul>
                        <li><a href="#">Breakfast</a></li>
                        <li><a href="#">Main Dish</a></li>
                        <li><a href="#">Dinner</a></li>
                        <li><a href="#">Snaks and Drinks</a></li>
                        
                    </ul>
                </div>


<!-- template -->


<!-- template -->

<!-- cards -->

                <div class="cardHolder">

                    
                    <% menuItems.forEach(menuItem => { %>
                        <div class="card">
                            <div class="content">
                                <div class="image">
                                    <img class="dishImg" src="/img/uploads/<%= menuItem.img %>" alt="">
                                </div>
                                <div class="image overlay">
                                    <p>add to order</p>
                                </div>
                            </div>
                            <div class="desc">
                                <h2 class="dishName"><%= menuItem.dishname %> </h2>
                                <span>
                                    <p class="text"><%= menuItem.dishdesc %></p>
                                    <p class="price">Ksh: <%= menuItem.dishprice %></p>
                                </span>
                            </div>
                        </div>

                    <%} ) %> 
                    


                    
                  
                    
                   

                </div>
                
            </div>


            <!-- right side -->
            <div class="right">
                <div class="container">
                    <h1>My Order</h1>

                    <div class="subtitle">

                    <h2>Table Number 6</h2>
                    <h3>Time : 1200hrs</h3>
                    </div>
